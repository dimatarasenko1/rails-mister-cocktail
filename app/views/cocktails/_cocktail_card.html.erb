<% if cocktail.photo.file %>
  <%= image_tag cl_image_path(cocktail.photo,
        width: 500, height: 400, crop: :fill),  class: "w-100 cocktail-image", alt: "" %>
<% else %>
  <%= image_tag cl_image_path('No_image_available_ow0nlp',
        width: 500, height: 400, crop: :fill),  class: "w-100 cocktail-image", alt: "" %>
<% end %>
<div class="text-right bg-light border rounded p-2">
  <i class="fas fa-exchange-alt" data-toggle="modal" data-target="#exampleModal"></i>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Upload image from your computer</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for cocktail, url: change_pic_cocktail_path(cocktail), method: :post, html: { class: "text-left"} do |f| %>
            <%= f.error_notification %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.button :submit, class: "btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <h3><%= cocktail.name %></h3>
  <div>
    <p><%= cocktail.tagline %></p>
  </div>
  <div>
    <%= 'ðŸ’ª' * cocktail.strength %>
  </div>
</div>
