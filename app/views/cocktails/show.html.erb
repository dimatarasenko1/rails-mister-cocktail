<%= render 'common/navbar' %>

<div class="container pt-3">
  <div class="row">
    <div class="col-12 col-md-6 cocktail-card">
      <%= render 'cocktail_card', cocktail: @cocktail %>
    </div>
    <div class="col-12 col-md-6">
      <div class="bg-white border rounded p-3">
        <!-- make this a full length button -->
        <% @cocktail.doses.each do |dose| %>
          <%= render 'ingredient_card', dose: dose %>
        <% end %>
        <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-primary btn-block" %>
        <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
</div>

